@using DPMS.EmailEngine.EmailTemplates;
@model AccountCredentialsVM;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Welcome Email</title>
</head>
<body style="margin: 0; padding: 0; font-family: Arial, sans-serif; background-color: #f4f4f4;">
    <table width="100%" cellspacing="0" cellpadding="0" border="0" style="max-width: 600px; margin: 20px auto; background-color: #ffffff; border-radius: 8px; overflow: hidden;">
        <tr>
            <td style="background-color: #007bff; padding: 20px; text-align: center; color: #ffffff;">
                <h1 style="margin: 0; font-size: 24px;">Welcome to DPMS!</h1>
            </td>
        </tr>
        <tr>
            <td style="padding: 20px;">
                <p style="margin: 0 0 15px 0; font-size: 16px; line-height: 1.5; color: #333333;">
                    Hi @Model.FullName,
                </p>
                <p style="margin: 0 0 15px 0; font-size: 16px; line-height: 1.5; color: #333333;">
                    Thank you for registering with us!<br />
                    We’re excited to have you on board. Get ready to explore a range of features tailored just for you.
                </p>
                <p style="margin: 0 0 15px 0; font-size: 16px; line-height: 1.5; color: #333333;">
                    Here are your login credentials:<br />
                    Email: <b>@Model.Email</b><br />
                    Password: <b>@Model.Password</b><br />
                </p>
                <p style="margin: 0 0 15px 0; font-size: 16px; line-height: 1.5; color: #333333;">
                    To get started, click the button below and log in to your account:
                </p>
                <div style="text-align: center; margin: 20px 0;">
                    <a href="@Model.DpmsLoginUrl" style="background-color: #007bff; color: #ffffff; text-decoration: none; padding: 10px 20px; border-radius: 5px; display: inline-block; font-size: 16px;">Log In</a>
                </div>
                <p style="margin: 0 0 15px 0; font-size: 16px; line-height: 1.5; color: #333333;">
                    If you have any questions or need assistance, feel free to contact our support team.
                </p>
                <p style="margin: 0; font-size: 16px; line-height: 1.5; color: #333333;">
                    Cheers,<br>
                    The DPMS Team
                </p>
            </td>
        </tr>
        <tr>
            <td style="background-color: #f4f4f4; text-align: center; padding: 10px; font-size: 12px; color: #777777;">
                &copy; Data Privacy Management System (DPMS) - SEP490_G50_SPR25. All rights reserved.
            </td>
        </tr>
    </table>
</body>
</html>